{
    "manifest_version": 2,

    "name": "LinkHub",
    "description":
        "A plugin where you can share links with your peers",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js", "hot-reload.js"],
        "persistent": false
    },

    "icons": {
        "128": "icon.png"
    },

    "permissions": []
}
